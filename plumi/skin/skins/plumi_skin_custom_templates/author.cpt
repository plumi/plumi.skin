                      <span class="fieldRequired" title="Required"
                              i18n:attributes="title title_required;"
                              i18n:translate="label_required">(Required)</span>

                      <textarea name="message"
                                id="message"
                                rows="5"
                                cols="25"
                                tal:content="request/message|nothing"
                                ></textarea>
                    </div>
        
                    <div class="formControls">


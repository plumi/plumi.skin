<?xml version="1.0"?>
<object name="portal_skins" allow_any="False" cookie_persistence="False"
   default_skin="Plumi 0.3 Skin">

 <object name="plumi_skin_custom_images"
    meta_type="Filesystem Directory View"
    directory="plumi.skin:skins/plumi_skin_custom_images"/>
 <object name="plumi_skin_custom_templates"
    meta_type="Filesystem Directory View"
    directory="plumi.skin:skins/plumi_skin_custom_templates"/>
 <object name="plumi_skin_styles"
    meta_type="Filesystem Directory View"
    directory="plumi.skin:skins/plumi_skin_styles"/>

 <skin-path name="Plumi 0.3 Skin" based-on="Plone Default">
  <layer name="plumi_skin_custom_images"
     insert-after="custom"/>
  <layer name="plumi_skin_custom_templates"
     insert-after="plumi_skin_custom_images"/>
  <layer name="plumi_skin_styles"
     insert-after="plumi_skin_custom_templates"/>
<layer name="ATVocabularyManager"
     insert-after="cmf_legacy"/>

 </skin-path>

</object>
